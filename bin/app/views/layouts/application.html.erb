<!DOCTYPE html>
<html>
  <head>
    <title>Quantic</title>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/<%= bootstrap_version %>/css/bootstrap.min.css" rel="stylesheet">

    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', "data-turbolinks-track" => false %>
    <%= javascript_include_tag 'application', "data-turbolinks-track" => false %>
  </head>

  <body>
    <div class="container">
        
            
            
      <div class="container-fluid" >
      	<div class="row">
      		<div class="col-md-12">
      			<ul class="nav navbar">
      				<li class="nav-item">
      					<a class="nav-link"><%= link_to "Home", root_path %></a>
      				</li>
      				<li class="nav-item", <% if user_signed_in? %> >
      					<a class="nav-link"><%= link_to "Browse", quantic_browse_path %></a>
      				</li>
      				<li class="nav-item">
      					<a class="nav-link"><%= link_to "Search", quantic_search_path %></a>
      				</li>
      				<% end %>
      				<li class="nav-item ml-md-auto">
                <% if not user_signed_in? %>
                  <a class="nav-link"><%= link_to('Login/Sign-Up', new_user_session_path)  %> </a>
                <% end %> 
              </li>
      				<li class="nav-item ml-md-auto">
                <% if user_signed_in? %>
                  <a class="nav-link"><%= link_to('Logout', destroy_user_session_path, method: :delete) %> </a>       
                <% end %>
              </li>
      			</ul>
      		</div>
      	</div>
      </div>
      
      
      <%= yield %>
    
    
    </div>
    <script src="maxcdn.bootstrapcdn.com/bootstrap/<%= bootstrap_version %>/js/bootstrap.min.js"></script>
  </body>
</html>
